@model AIText.Models.SendReview.SendReviewSearch
@{
    var sites = ViewData["Site"] as List<Entitys.SiteAccount>;
    var prompts = ViewData["Prompt"] as List<Entitys.PromptTemplate>;
}
<div class="page-header d-print-none ">
    <div class="row align-items-center mb-2">
        <div class="col">
            <h2 class="page-title">
                AI评论生成记录管理
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
                <a href="/SendReview/" title="查看评论记录" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-repeat"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 12v-3a3 3 0 0 1 3 -3h13m-3 -3l3 3l-3 3" /><path d="M20 12v3a3 3 0 0 1 -3 3h-13m3 3l-3 -3l3 -3" /></svg>
                    查看评论记录
                </a>
            </div>
        </div>
    </div>
</div>


<div class="row  justify-content-center">
    <div class="col-12 col-lg-12  ">
        <form data-ajax="true" data-ajax-update="#divreplace" data-ajax-mode="replace" asp-action="DoAiList" asp-controller="SendReview" data-ajax-method="post" method="post" class="card">
            <div class="card-header">
                <div class="row" style="width:100%;">
                    <h4 class="card-title col">搜索</h4>
                    <div class="col-auto ms-auto">
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        <div class="subheader mb-2 mt-2">站点</div>
                        <select asp-for="SyncSiteId" class="form-control">
                            <option value="">请选择站点</option>
                            @if (sites?.Count > 0)
                            {
                                @foreach (var item in sites)
                                {
                                    <option value="@item.Id">@item.Site</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <div class="subheader mb-2 mt-2">时间</div>
                        <div>
                            <input asp-for="BeginTime" class="form-control" placeholder="" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="subheader mb-2 mt-2 invisible">时间</div>
                        <div>
                            <input asp-for="EndTime" class="form-control" placeholder="" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="subheader mb-2 mt-2" style="visibility:hidden">占位</div>
                        <div>
                            <button class="btn btn-primary w-100">
                                查找
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-9 row">
                    </div>
                </div>
            </div>

        </form>

    </div>

    <div class="col-12  col-lg-12 mt-1">
        <div class="card" id="divreplace">
            @Html.Action("DoAiList", Model)
        </div>
    </div>



</div>
