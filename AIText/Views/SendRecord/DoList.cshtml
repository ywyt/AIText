@model commons.util.PageList<AIText.Models.SendRecord.SendRecordDto>
@if (Model.List?.Count > 0)
{
    <div class="card-header">
        <h4 class="card-title">列表</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-vcenter card-table">
            <thead>
                <tr>
                    <th>指令模板</th>
                    <th>关键词</th>
                    <th>标题</th>
                    <th>图片</th>
                    <th>图片生成时间</th>
                    <th>文章生成时间</th>
                    <th>同步站点</th>
                    <th>是否同步</th>

                    <th class="w-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model.List)
                {
                    <tr>
                        <td class="text-muted">
                            @info.TemplateName
                        </td>
                        <td class="text-muted">
                            @info.Keyword
                        </td>
                        <td class="text-muted">
                            @info.Title
                        </td>
                        <td class="text-muted">
                            @if (!string.IsNullOrEmpty(info.ImgUrl) || !string.IsNullOrEmpty(info.ImgPath))
                            {
                                <img src="@(info.ImgPath ?? info.ImgUrl)" height="100" />
                            }
                        </td>
                        <td class="text-muted">
                            @info.ImgTime
                        </td>
                        <td class="text-muted">
                            @info.AiTime
                        </td>
                        <td class="text-muted">
                            @info.SyncSite
                        </td>
                        <td class="text-muted">
                            @(info.IsSync == true ? "是" : "否")
                        </td>
                        <td class="text-muted">
                            <div class="btn-list flex-nowrap">
                                <!--没有图片且未生成文章时，可调用绘图-->
                                @if (string.IsNullOrEmpty(info.ImgUrl) && string.IsNullOrEmpty(info.Content))
                                {
                                    <a data-confirm="@Url.Content("/SendRecord/DoDraw?Id=" + info.Id)" title="是否绘图" class="btn bg-yellow">
                                        绘图
                                    </a>
                                }
                                @if (string.IsNullOrEmpty(info.Content))
                                {
                                    <a data-confirm="@Url.Content("/SendRecord/DoAI?Id=" + info.Id)" title="生成文章" class="btn btn-cyan">
                                        生成文章
                                    </a>
                                }
                                else 
                                {
                                    if (info.IsSync == false)
                                    {
                                        <a data-confirm="@Url.Content("/SendRecord/DoSync?Id=" + info.Id)" title="发布到站点" class="btn btn-green">
                                            同步
                                        </a>
                                        <a href="@Url.Content("/SendRecord/Preview?Id=" + info.Id)" class="btn btn-secondary" target="_blank">
                                            文章预览
                                        </a>
                                    }
                                    else if (!string.IsNullOrEmpty(info.SyncUrl))
                                    {
                                        <a href="@info.SyncUrl" class="btn btn-secondary" target="_blank">
                                            文章查看
                                        </a>
                                    }
                                }
                                <a href="@Url.Content("~/SendRecord/Edit?Id=" + info.Id)" class="btn btn-azure">
                                    查看
                                </a>
                                <a data-confirm="/SendRecord/DoDelete?Id=@info.Id" title="是否删除" class="btn btn-danger">
                                    删除
                                </a>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>


    </div>

    @Html.Pager(Model)
}
else
{

    <div class="empty">
        <div class="empty-img">
            <img src="~/static/illustrations/undraw_printing_invoices_5r4r.svg" height="128" alt="">
        </div>
        <p class="empty-title">没有找到数据</p>
        <p class="empty-subtitle text-muted">
            Try adjusting your search or filter to find what you're looking for.
        </p>
    </div>
}