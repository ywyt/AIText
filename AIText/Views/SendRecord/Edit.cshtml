@model AIText.SendRecord
@{

}
<div class="modal-content">
    <form class="form-horizontal" data-ajax="true" data-ajax-complete="ajaxRvCompleted" asp-action="DoEdit" asp-controller="SendRecord" data-ajax-method="post">
        @Html.HiddenFor(obj => obj.Id)
        <div class="modal-body">

            <div class="row mb-3 align-items-end">

                <div class="col">
                    <label class="form-label">提示词</label>
                    <input asp-for="Prompt" class="bg-focus form-control parsley-validated" />
                    <span asp-validation-for="Prompt" class="text-danger"> </span>
                </div>
                <div class="col">
                    <label class="form-label">标题</label>
                    <input asp-for="Title" type="text" class="bg-focus form-control parsley-validated" />
                    <span asp-validation-for="Title" class="text-danger"> </span>
                </div>
            </div>

            <div class="row mb-3 align-items-end">

                <div class="col">
                    <label class="form-label">内容</label>
                    <input asp-for="Content" class="bg-focus form-control parsley-validated" />
                    <span asp-validation-for="Content" class="text-danger"> </span>
                </div>
            </div>

            <div class="row mb-3 align-items-end">
                <div class="col">
                    <label class="form-label">同步时间</label>
                    <input class="form-control" asp-for="SyncTime">

                </div>
            </div>
            <div class="row mb-3 align-items-end">
                <div class="col">
                    <label class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsSync">
                        <span class="form-check-label">是否同步</span>
                    </label>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">修改</button>
        </div>
    </form>

</div>

