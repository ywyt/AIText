<script>
    function previewComplete(xhr) {
        if ($(this).html().length > 0) {
            $("#importForm").show();
            $("#previewDiv").hide();
        }
    }



    var ajaxRvCompletedToPaintAccount = function (data) {
        if (data.status != 200) {
            $.tipsError(data.responseText);
            return;
        }
        if (data.responseJSON != false && data.responseJSON.status) {
            $.tipsOk("操作成功!");
            setTimeout(function () {
                window.location = '/PaintAccount/Index';
            }, 1500);
        }
        else {
            $.tipsError(data.responseJSON.errorsimple);
        }
    };

</script>