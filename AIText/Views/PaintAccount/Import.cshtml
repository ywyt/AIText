                <form id="importForm" class="card" data-ajax="true" data-ajax-complete="ajaxRvCompletedToPaintAccount" data-ajax-update="#errMsgDiv" asp-action="DoImport1" asp-controller="PaintAccount" enctype="multipart/form-data" data-ajax-method="post"
