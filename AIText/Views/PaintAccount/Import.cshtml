        <div class="col-lg-12">
            <div class="card-body">

                <form id="prepareExcel" class="card" data-ajax="true" data-ajax-complete="previewComplete" data-ajax-update="#divlist" data-ajax-mode="replace" asp-action="ToImport" asp-controller="PaintAccount" enctype="multipart/form-data" data-ajax-method="post">
