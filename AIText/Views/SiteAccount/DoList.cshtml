@model commons.util.PageList<AIText.Models.SiteAccount.SiteAccountDto>
@if (Model.List?.Count > 0)
{
    <div class="card-header">
        <h4 class="card-title">列表</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-vcenter card-table">
            <thead>
                <tr>
                    <th>网站</th>
                    <th>用户名</th>
                    <th>是否启用</th>
                    <th>每日发送</th>
                    <th>时段</th>
                    <th>开始发送时间</th>
                    <th class="w-1"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model.List)
                {
                    <tr>
                        <td class="text-muted">
                            @info.Site
                        </td>
                        <td class="text-muted">
                            @info.Username
                        </td>
                        <td class="text-muted">
                            @(info.IsEnable == true ? "是" : "否")
                        </td>
                        <td class="text-muted">
                            @info.CountPerDay
                        </td>
                        <td class="text-muted">
                            @info.Hours
                        </td>
                        <td class="text-muted">
                            @info.StartDate
                        </td>
                        <td class="text-muted">
                            <div class="btn-list flex-nowrap">
                                <a data-src="@Url.Content("~/SiteAccount/Edit?Id="+info.Id)" class="btn btn-azure">
                                    修改
                                </a>
                                <a data-confirm="/SiteAccount/DoDelete?Id=@info.Id" title="是否删除" class="btn btn-danger">
                                    删除
                                </a>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>


    </div>

    @Html.Pager(Model)
}
else
{

    <div class="empty">
        <div class="empty-img">
            <img src="~/static/illustrations/undraw_printing_invoices_5r4r.svg" height="128" alt="">
        </div>
        <p class="empty-title">没有找到数据</p>
        <p class="empty-subtitle text-muted">
            Try adjusting your search or filter to find what you're looking for.
        </p>
    </div>
}